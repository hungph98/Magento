<?xml version="1.0" encoding="UTF-8" ?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
        <table name="Blog_post" resource="default" engine="innodb" comment="Blog Post Table">
        <column xsi:type="smallint" name="post_id" unsigned="false" nullable="false" identity="true"
                comment="Blog Post ID"/>
        <column xsi:type="varchar" name="title" nullable="true" length="255" comment="Post Title"/>
        <column xsi:type="varchar" name="meta_title" nullable="false" length="255" comment="Post Meta Title"/>
        <column xsi:type="text" name="meta_keywords" nullable="true" comment="Post Meta Keywords"/>
        <column xsi:type="text" name="meta_description" nullable="true" comment="Post Meta Description"/>
        <column xsi:type="mediumtext" name="content" nullable="true" comment="Post Content"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Post Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Post Modification Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="post_id"/>
        </constraint>
    </table>
</schema>
